<h1><%= markdown @post.title %></h1>

<div class="row">
  <div class="span8">
    <p><%= markdown @post.body %></p>
  </div>
  <div class="span4">
    <%# if can? :edit, @post %>
      <%#= link_to "Edit", edit_topic_post_path(@topic,@post), class: 'btn btn-large btn-block' %>
    <%# end %>
  </div>
  <br>
</div>

<% @comments.each do |comment| %>
  <p> User Name:
    <%= comment.user.name %>
  </p>
  <p>
      Comments:
    <%= comment.body %>
  </p>
<% end %>

